<% if @list_user.present? && !@list_user.blank? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @list_user.each do |card| %>
        <tr>  
          <td><%= card.fname %></td>
          <td><%= card.lname %></td>
          <td><%= card.email %></td>
          <td>
          <img alt="Delete" class="delete_user" id="delete_<%= card.emp_id%>" onclick="remove_user('<%= card.email %>','<%= card.emp_id %>');" src="/assets/close.png">
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
